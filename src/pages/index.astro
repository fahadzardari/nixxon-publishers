---
import Navbar from "../components/common/Navbar.astro";
import Layout from "../layouts/Layout.astro";
import Hero from "../components/home/Hero.astro";
import Footer from "../components/common/Footer.astro";
import Quote from "../components/common/Quote.astro";
import IntroHome from "../components/home/IntroHome.astro";
import ArtWork from "../components/home/ArtWork.astro";
import PublisherServices from "../components/home/PublisherServices.astro";
import Testimonials from "../components/home/Testimonials.astro";
import Achievements from "../components/home/Achievements.astro";
import WhyNixxon from "../components/home/WhyNixxon.astro";
import Packages from "../components/common/Packages.astro";
import PackageCard from "../components/common/PackageCard.astro";
---

<Layout title="Home | Nixxon Publishers">
  <Navbar />
  <Hero />
  <IntroHome />
  <PublisherServices />
  <ArtWork />
  <WhyNixxon />

  <Packages
    title="From The Blank SheeT To The Best-Selling Book"
    subtitle="With Our Reasonably Priced Packages, Become a Successful Writer"
    description="You are able to relax and appreciate the process as we take your idea and transform it into a critically acclaimed book when Nixxon Publishers Writing is on your side. With just one brief, we will take care of your book's writing, publication, and marketing to ensure that it reaches the readers you want. That is the calibre of our work! these services in affordable packages"
    showTab={false}
  >
    <PackageCard
      packageName="Basic Book Publishing Package"
      price="$299"
      beforePrice="$598"
      discount="50%"
      subtitle="For authors who want a straightforward, budget-friendly approach to getting their book published on major online platforms."
      points={[
        "<strong>Editorial Assessment</strong> (Basic Book Assessment)",
        "<strong>Manuscript Editing</strong> (Copy Editing, Line Editing & Proofreading)",
        "<strong>Book Formatting</strong> for one of all Three Formats",
        "<strong>Publishing to Amazon KDP</strong> (Kindle Direct Publishing)",
        "<strong>Amazon Author Central Setup</strong>",
        "<strong>Basic Metadata Setup</strong> (Title, Description, Keywords, Categories)",
        "<strong>One 30-Minute Consultation Call</strong> for publishing tips and advice",
      ]}
      bonus={[
        "<strong>Free 10-Minute Book Launch Strategy Consultation</strong>",
        "<strong>Amazon Book Listing Optimization</strong> (Basic keywords and description)",
      ]}
    />

    <PackageCard
      packageName="Start-Up Book Publishing Package"
      price="$599"
      beforePrice="$1198"
      discount="50%"
      subtitle="For authors who want to publish their book across multiple platforms and ensure a professional look and feel for their published book."
      points={[
        "<strong>Editorial Assessment</strong> (Complete Manuscript Evaluation)",
        "<strong>Manuscript Editing</strong> (Copy editing, Line editing, Developmental editing & Proofreading)",
        "<strong>Book Formatting</strong> for eBook, Paperback & Hardcover",
        "<strong>Custom Book Cover Design</strong> (Professional design)",
        "<strong>Publishing to Amazon KDP, Barnes & Noble, Apple Books, Kobo,</strong> and <strong>Google Books</strong>",
        "<strong>Book Author Website Creation</strong> (Basic landing page)",
        "<strong>Advanced Metadata Setup</strong> (Title, Description, Keywords, Categories, Author Bio)",
        "<strong>Amazon Author Central Setup</strong>",
        "<strong>Print On Demand Setup</strong>",
        "<strong>Marketing Consultation</strong> (1 hour) to discuss launch and promotional strategies",
        "<strong>2 Months of Post-Publication Support</strong> (help with updates and basic questions)",
      ]}
      bonus={[
        "<strong>1 Free Social Media Graphics Pack</strong> for book promotion",
        "<strong>Amazon Book Listing Optimization</strong> (Advanced keywords and metadata)",
      ]}
    />

    <PackageCard
      packageName="Premium Book Publishing Package"
      price="$1299"
      beforePrice="$2598"
      discount="50%"
      subtitle="For authors who want a comprehensive, all-in-one publishing solution with global distribution and advanced services to maximize book sales."
      points={[
        "<strong>Advance Editorial Assessment</strong> (Complete Manuscript Evaluation By Genre Experts)",
        "<strong>Manuscript Editing</strong> (Copy editing, Line editing, Developmental editing & Proofreading)",
        "<strong>Premium Book Formatting</strong> for eBook, Paperback & Hardcover (multiple trim sizes available)",
        "<strong>Custom ISBN Assignment</strong> (eBook, Paperback & Hardcover)",
        "<strong>Premium Custom Book Cover Design</strong> (Unique and professional design tailored to your genre)",
        "<strong>Publishing to Amazon KDP, Barnes & Noble, Apple Books, Kobo, Google Play Books & Lulu</strong>",
        "<strong>Custom Book Author Website</strong> with integrated eCommerce (sell your book directly)",
        "<strong>Advanced Metadata Setup</strong> (Keywords, Categories, Subtitle, Pricing, and Global Rights)",
        "<strong>Amazon Author Central</strong> (Complete setup, with advanced promotional links, blog, and author bio)",
        "<strong>Print On Demand Setup</strong> (On multiple publishing platforms)",
        "<strong>Book Launch & Marketing Strategy</strong> (Comprehensive plan for launch, including press release)",
        "<strong>Ongoing Post-Publication Support</strong> (3 months of updates, troubleshooting, and advice)",
      ]}
      bonus={[
        "<strong>International Distribution Strategy</strong> (Outreach to global retailers)",
        "<strong>Social Media Book Launch Pack</strong> (Premium visuals for Facebook, Instagram, and Twitter)",
        "<strong>1 Free Book Trailer Video</strong> (30-60 seconds to promote on social media)",
        "<strong>One Free Follow-Up Consultation Call</strong> after 3 months for advanced marketing strategies",
      ]}
    />
  </Packages>

  <Achievements />
  <Testimonials />
  <Quote />
  <Footer />
</Layout>
