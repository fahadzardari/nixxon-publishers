---
import Navbar from "../../components/common/Navbar.astro";
import Layout from "../../layouts/Layout.astro";
import Footer from "../../components/common/Footer.astro";
import ArtWork from "../../components/home/ArtWork.astro";
import Testimonials from "../../components/home/Testimonials.astro";
import ServiceHero from "../../components/common/ServiceHero.astro";
const title = "Experience Audiobooks That Bring Stories to Life";
const description =
  "Immerse yourself in a world of storytelling with NixxonTech’s professional audiobook services. We transform textual works into captivating audio experiences that bring your tale to life with expert voiceovers and exceptional sound quality.  Whether your audiobook is fictitious or real, our staff ensures that your audience will like it. Contact NixxonTech to enhance your literary journey with our audiobook services.";
import GhostwritingImage from "../../assets/common/hero-pics/audiobooks.png";
import Packages from "../../components/common/Packages.astro";
import PackageCard from "../../components/common/PackageCard.astro";
import CommonIntro from "../../components/common/CommonIntro.astro";
const intro = {
  title: "Creating Compelling Audiobooks From Your Stories ",
  description:
    "To produce top-notch audio that captures writers' ideas, our staff works closely with them. Every audiobook is made with the intention of captivating listeners and making an impression. Get the best fusion of creativity and uniqueness from our expert professionals. ",
  getStartedButton: true,
};
import IntroImage from "../../assets/common/intro-pics/audiobooks.png";
import Quote from "../../components/common/Quote.astro";
---

<Layout title="Audiobooks Service | Nixxon Publishers">
  <Navbar />
  <ServiceHero
    pageName="Audiobooks Service"
    title={title}
    description={description}
    image={GhostwritingImage}
    imageAlt="Audiobooks Service Image"
  />
  <CommonIntro
    title={intro.title}
    description={intro.description}
    image={IntroImage}
    getStartedButton={intro.getStartedButton}
  />
  <ArtWork />
  <Packages
    title="Affordable Audiobook Packages to Meet Your Needs "
    description="As we turn your written work into an interesting audiobook, unwind and take pleasure in the process. From narration to production, our staff takes care of everything, guaranteeing a smooth experience with outcomes that go above and above."
  >
    <PackageCard
      packageName="Basic Audiobook Package"
      price="$249"
      discount="50%"
      beforePrice="$498"
      priceNote="for up to 30 minutes of content"
      subtitle="Ideal for short eBooks or promotional narrations with a tight budget"
      points={[
        "Up to <strong>3,000 words</strong> (approx. 20–30 minutes)",
        "<strong>Professional single-voice narration</strong>",
        "<strong>Choice of male or female narrator</strong>",
        "<strong>Basic studio-quality recording</strong>",
        "<strong>1 round of free revision</strong> (minor edits)",
        "<strong>Intro & outro music</strong> (royalty-free)",
        "Delivered in <strong>MP3 format</strong>",
        "100% <strong>commercial use rights</strong>",
        "<strong>Noise reduction & mastering</strong> included",
        "<strong>Standard delivery</strong>: 5–7 business days",
      ]}
    />

    <PackageCard
      packageName="Start-Up Audiobook Package"
      price="$499"
      discount="50%"
      beforePrice="$998"
      priceNote="for up to 10,000 words / ~1 hour"
      subtitle="Perfect for authors launching their first audiobook or podcast series"
      points={[
        "Up to <strong>10,000 words</strong> (approx. 60–70 minutes)",
        "<strong>Premium narration</strong> by experienced voice-over artist",
        "<strong>Voice tone selection</strong> based on genre/style",
        "<strong>Script adaptation for audio listening flow</strong>",
        "<strong>2 rounds of editing/revisions</strong>",
        "<strong>Intro/outro music + chapter sound cues</strong>",
        "Audio files delivered in <strong>MP3 + WAV</strong> formats",
        "100% <strong>broadcast & distribution rights</strong>",
        "<strong>ACX/Audible compliant audio formatting</strong>",
        "<strong>Delivery</strong>: 7–10 business days",
      ]}
      bonus={[
        "Free audiobook cover design (1 concept)",
        "Upload support for ACX, Findaway, or Author's website",
      ]}
    />

    <PackageCard
      packageName="Standard Audiobook Package"
      price="$999"
      discount="50%"
      beforePrice="$1,999"
      priceNote="up to 25,000 words / ~2.5 hours"
      subtitle="Tailored for published authors, coaches, and entrepreneurs wanting a flawless, studio-grade audiobook experience"
      points={[
        "Up to <strong>25,000 words</strong> (approx. 2.5–3 hours)",
        "<strong>Top-tier voice talent</strong> with storytelling delivery",
        "<strong>Genre-based voice tone & pacing</strong>",
        "<strong>Script polishing & narrative optimization</strong>",
        "<strong>Unlimited revisions</strong> for voice performance & clarity",
        "Professional <strong>studio recording + post-production mastering</strong>",
        "<strong>Sound effects & ambient enhancements</strong> (if needed)",
        "Files delivered in <strong>MP3, WAV & AAC formats</strong>",
        "<strong>ACX, Audible, Spotify, and Google Play ready</strong>",
        "Priority <strong>turnaround</strong>: 10–14 business days",
      ]}
      bonus={[
        "Free consultation with audiobook producer",
        "Custom <strong>cover design for Audible/ACX </strong>",
        "Free distribution guidance",
        "Dedicated project manager",
      ]}
    />
  </Packages>
  <Quote
    title="The Ultimate Solution for Audiobook Creation"
    description="If your tale were delivered in an interesting audiobook, would you be interested? Every audiobook has an impact and engages listeners thanks to the hard work of our talented crew. Our idea might become a breathtaking audio production that captivates listeners and emphasizes your story using NixxonTech. "
  />
  <Testimonials
    description="Do you want your voice to be heard by a large audience? Our staff makes sure your audiobook connects with listeners and maintains their interest throughout."
  />
  <Footer />
</Layout>
