import Polishing from "../../assets/services-icons/polishing.png";

const services = [
  {
    title: "Expert Illustration Services",
    description:
      "At Nixxon Publishers, we start with a thorough consultation with the customer. Before setting out on this adventure, we make sure we fully understand your vision and objectives for your book's illustrations.",
    icon: Discuss,
  },
  {
    title: "Creating Engaging eBook Cover Art",
    description:
      "Strategic planning and research are powerful tools, and we trust them. Each piece of artwork is supported by informed insights and a well-thought-out plan because our team painstakingly crafts cover designs that capture readers' attention.",
