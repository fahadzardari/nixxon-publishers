---
import Navbar from "../../components/common/Navbar.astro";
import Layout from "../../layouts/Layout.astro";
import Footer from "../../components/common/Footer.astro";
import ArtWork from "../../components/home/ArtWork.astro";
import Testimonials from "../../components/home/Testimonials.astro";
import ServiceHero from "../../components/common/ServiceHero.astro";
const title = "Welcome to NixxonTech, Your Go-To Book Video Trailer Platform ";
const description =
  "Learn how reading can be turned into a movie with NixxonTech. Collaborate with our team to produce customized videos that capture the spirit of your book and captivate audiences.  To start your creative adventure, get in touch with us right now.";
import GhostwritingImage from "../../assets/common/hero-pics/book-video-trailer.png";
import Packages from "../../components/common/Packages.astro";
import PackageCard from "../../components/common/PackageCard.astro";
import CommonIntro from "../../components/common/CommonIntro.astro";
const intro = {
  title: "A Cinematic Teaser Video That Captivates Your Audience",
  description:
    "With the expert video trailer services from NixxonTech, explore amazing creative possibilities. We produce highly effective trailers that present your idea at a large scale. Your branding will be something big and influential. ",
  getStartedButton: true,
};
import IntroImage from "../../assets/common/intro-pics/book-video-trailer.png";
import Quote from "../../components/common/Quote.astro";
import ServicesRow from "../../components/common/ServicesRow.astro";

import Discuss from "../../assets/services-icons/discussion-with-customers.png";
import Planning from "../../assets/services-icons/our-planning.png";
import Making from "../../assets/services-icons/compelling-videos.png";
import Polishing from "../../assets/services-icons/polishing.png";

const services = [
  {
    title: "Begin the Journey",
    description:
      "At NixxonTech, we ensure every frame reflects your vision. Our comprehensive consultation process allows us to fully understand your goals before bringing your story to life through high-quality videos.",
    icon: Discuss,
  },
  {
    title: "Expert Animators at Your Service",
    description:
      "Our team believes in the power of meticulous planning and research. Each video is supported by a well-structured strategy to ensure every element aligns with your vision. Our experienced animators are dedicated to delivering exceptional results.",
    icon: Planning,
  },
  {
    title: "Unmatched Creativity",
    description:
      "Creating compelling content is key to captivating your audience. At NixxonTech, our team infuses your trailers with imaginative and innovative ideas to ensure they leave a lasting impression.",
    icon: Making,
  },
  {
    title: "Flexible Editing",
    description:
      "From the inception of your idea to the final edit, we are here to bring your story to life through our specialized services. Whether you require video creation, editing, or promotional assistance, we have you covered.",
    icon: Polishing,
  },
];
---

<Layout
  title="Book Video Trailer Service | Nixxon Publishers"
  metaTitle="Book Trailer Video Production Service | Author Promo Videos"
  description="Promote your book with a cinematic video trailer. Our team creates attention-grabbing book trailers to help market your story on YouTube & social media."
  tags="book trailer video, author promo video, video marketing for authors, cinematic book trailer"
>
  <Navbar />
  <ServiceHero
    pageName="Book Video Trailer Service"
    title={title}
    description={description}
    image={GhostwritingImage}
    imageAlt="Book Video Trailer Service Image"
  />
  <CommonIntro
    title={intro.title}
    description={intro.description}
    image={IntroImage}
    getStartedButton={intro.getStartedButton}
  />
  <ServicesRow services={services} />
  <ArtWork
    title="Our Impressive Portfolio"
    subtitle=""
    description="Take a glance at our most compelling video trailers crafted for various genres.  "
  />
  <Packages
    title="Affordable and High-Caliber Video Trailer Services"
    description="Let us handle the hard work for you. At NixxonTech, we ensure your ideas come to life seamlessly through exceptional video trailers. With affordable packages tailored to your needs, you can sit back and watch your story unfold in stunning detail."
  >
    <PackageCard
      packageName="Basic Book Video Trailer Package"
      price="$149"
      beforePrice="$298"
      discount="50%"
      subtitle="Ideal for authors looking for a simple yet effective video trailer to promote their book."
      points={[
        "<strong>30-second book video trailer</strong>",
        "Simple <strong>animated text & stock imagery</strong>",
        "<strong>Professional background music</strong>",
        "<strong>1 revision</strong> included",
        "<strong>Text overlay</strong> to highlight the book title, author name, and tagline",
        "Suitable for <strong>social media platforms</strong> (Instagram, Facebook, etc.)",
        "High-quality <strong>HD video output</strong>",
        "<strong>Amazon/KDP specifications</strong>",
        "Final video in <strong>MP4 format</strong>",
        "Turnaround: <strong>3–5 business days</strong>",
      ]}
    />

    <PackageCard
      packageName="Start-Up Book Video Trailer Package"
      price="$249"
      beforePrice="$498"
      discount="50%"
      subtitle="Perfect for authors looking for a more dynamic and engaging trailer that includes more customization and high-quality visuals."
      points={[
        "<strong>45-second book video trailer</strong>",
        "Customized <strong>animated text and images</strong>",
        "<strong>2 revisions</strong> included",
        "High-quality <strong>background music and sound effects</strong>",
        "Custom <strong>transition effects</strong> for scene changes",
        "<strong>Author photo inclusion</strong> (optional)",
        "Suitable for <strong>social media marketing</strong> (Instagram, Facebook, Twitter)",
        "<strong>Text overlays</strong> showcasing book title, author name, synopsis, and CTA",
        "Final video in <strong>HD MP4 format</strong> with Amazon/KDP specifications",
        "Turnaround: <strong>5–7 business days</strong>",
      ]}
      bonus={[
        "<strong>Free social media teaser clips</strong> (15 seconds) for promotions",
        "<strong>Free trailer promotion strategy guide</strong>",
      ]}
    />

    <PackageCard
      packageName="Standard Book Video Trailer Package"
      price="$499"
      beforePrice="$998"
      discount="50%"
      subtitle="For authors who want a more immersive trailer with advanced visual effects, professional voiceover, and cinematic quality."
      points={[
        "<strong>60-second book video trailer</strong>",
        "<strong>Customized animations</strong> and cinematic transitions",
        "<strong>3 revisions</strong> included",
        "Professional <strong>voiceover</strong> (optional, if desired)",
        "High-quality <strong>background music and sound effects</strong>",
        "<strong>Custom book images or video clips</strong> for a unique trailer",
        "Text overlays with a <strong>full synopsis</strong>, book title, author name, and call-to-action",
        "Final video in <strong>HD MP4 format</strong> (optimized for all platforms, including Amazon)",
        "<strong>Social media versions</strong> (formatted for Instagram, Facebook, etc.)",
        "Turnaround: <strong>7–10 business days</strong>",
      ]}
      bonus={[
        "<strong>Free 15-second teaser video</strong> for social media promotion",
        "<strong>Social media cover video</strong> (for Facebook or YouTube)",
        "<strong>One free consultation for video promotion strategy</strong>",
      ]}
    />

    <PackageCard
      packageName="Premium Book Video Trailer Package"
      price="$999"
      beforePrice="$1998"
      discount="50%"
      subtitle="The ultimate package for authors who want a blockbuster-style video trailer with high-end visuals, animation, and professional voiceover."
      points={[
        "<strong>90-second cinematic book video trailer</strong>",
        "High-quality <strong>3D animations</strong> and motion graphics",
        "<strong>Unlimited revisions</strong> until satisfaction",
        "Professional <strong>voiceover</strong> with sound design",
        "High-end <strong>cinematic music and sound effects</strong>",
        "<strong>Original book images, videos, or animations</strong> tailored to the story",
        "Complete <strong>book synopsis</strong> with detailed author branding",
        "Final video in <strong>HD MP4, MOV, and 4K format</strong> (multiple formats for different platforms)",
        "Optimized for <strong>social media, Amazon, YouTube, and other video platforms</strong>",
        "Turnaround: <strong>10–14 business days</strong>",
      ]}
      bonus={[
        "<strong>Free 30-second teaser trailer for social media</strong>",
        "<strong>Custom 3D logo animation</strong> for branding",
        "<strong>Dedicated video marketing strategy consultation</strong>",
        "<strong>One month of social media post scheduling</strong> (for trailer promotion)",
      ]}
    />
  </Packages>
  <Quote
    title="THE ULTIMATE ANSWER TO YOUR BOOK PROMOTION NEEDS"
    description="Have a book that deserves an audience? Let our skilled team create a video trailer that highlights the unique charm of your story."
  />
  <Testimonials
    description="Need captivating book trailer content without the hassle? Our professional team listens closely to your vision, crafts the perfect teaser, and delivers outstanding results tailored to your expectations."
  />
  <Footer />
</Layout>
