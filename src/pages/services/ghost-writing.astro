---
import Navbar from "../../components/common/Navbar.astro";
import Layout from "../../layouts/Layout.astro";
import Footer from "../../components/common/Footer.astro";
import ArtWork from "../../components/home/ArtWork.astro";
import Testimonials from "../../components/home/Testimonials.astro";
import ServiceHero from "../../components/common/ServiceHero.astro";
const title =
  "Creating Captivating Stories With Nixxon publisher eBook Ghostwriting Service!";
const description =
  "Visit Nixxon publisher to experience Ebook Ghostwriting, where your creativity comes true. Our experienced ghostwriters collaborate with you to create personalized stories from your ideas. Our discreet and collaborative strategy will highlight your story and recognize you as the author of an engaging book. Contact Nixxon Publishers for ebook ghostwriting services.";
import GhostwritingImage from "../../assets/services/ghost-writing/hero.png";
import Categories from "../../components/common/Categories.astro";
import Packages from "../../components/common/Packages.astro";
import PackageCard from "../../components/common/PackageCard.astro";
import IntroImage from "../../assets/common/intro-pics/article-publication.png";
import CommonIntro from "../../components/common/CommonIntro.astro";
const intro = {
  title: "Providing You Outstanding Book Services",
  description:
    "Providing quality-assured services is our priority at NixxonTech. Our staff makes every effort to satisfy your needs and help create a literary masterpiece that captures your original ideas. From the initial concept to final publication, every stage of your book's development is handled with care to ensure a polished and professional result. ",
  getStartedButton: true,
  headings: [
    "Professional and Experienced Writers",
    "Professional Editing and Proofreading",
    "An Efficient Ghostwriting Procedure",
    "Complete Customer Satisfaction",
    "Timely Delivery",
    "Affordable Packages",
  ],
};
---

<Layout
  title="Ghost Writing | Nixxon Publishers"
  metaTitle="Hire Professional Ghostwriter for Book | Ghostwriting Services USA"
  description="Get expert ghostwriting services for fiction, nonfiction, memoirs, and children’s books. Hire book ghostwriters with experience delivering bestselling manuscripts."
  tags="ghostwriting services, hire ghostwriter, book ghostwriter USA, professional ghostwriter, ghostwritten books"
>
  <Navbar />
  <ServiceHero
    title={title}
    description={description}
    image={GhostwritingImage}
    imageAlt="Ghost Writing Service Image"
  />
  <CommonIntro
    title={intro.title}
    description={intro.description}
    image={IntroImage}
    getStartedButton={intro.getStartedButton}
    headings={intro.headings}
    leftColumnElements={4}
  />
  <ArtWork
    title="Remarkable Creations of Artwork"
    subtitle="Explore Some of Our Most Loved Books"
    description="To turn your story concepts into captivating narratives, our skilled writers at NixxonTech put in endless effort. Get the best services across a variety of genres including mystery, romance and many more. You will enjoy the entire process as much as our team does."
  />
  <Categories />
  <Packages
    title="Find the Best Affordable Price and the Best eBook Ghostwriting Service"
    description="Our ghostwriters are here to help in getting your ideas published. We not only listen to your thoughts but also structure them to turn your vision into reality. You just need to have faith in us and we will make it just the way you want!"
  >
    <PackageCard
      packageName="Basic Ghostwriting Package"
      price="$499"
      beforePrice="$998"
      subtitle="Ideal for individuals testing the waters of authorship"
      priceNote="flexible based on genre and length"
      discount="50%"
      points={[
        "Up to <strong>5,000 words</strong> (approx. 20–25 pages)",
        "<strong>One-on-one consultation</strong> (30 minutes)",
        "<strong>Outline creation</strong> based on your idea",
        "<strong>1 round of revisions</strong>",
        "Written by a <strong>junior ghostwriter</strong>",
        "<strong>Basic editing</strong> included",
        "Standard turnaround: <strong>10–14 business days</strong>",
        "100% <strong>original & plagiarism-free content</strong>",
        "<strong>NDA agreement</strong> for confidentiality",
        "Royalty & rights fully transferred to <strong>client</strong>",
      ]}
    />
    <PackageCard
      packageName="Startup Ghostwriting Package"
      subtitle="Perfect for entrepreneurs, speakers, or influencers who want to publish a short book or eBook."
      price="$999"
      beforePrice="$1,998"
      discount="50%"
      points={[
        "Up to <strong>15,000 words</strong> (approx. 60–70 pages)",
        "<strong>Two virtual consultation calls</strong>",
        "<strong>Detailed outline & chapter planning</strong>",
        "Written by a <strong>senior ghostwriter</strong>",
        "<strong>2 rounds of revisions</strong>",
        "<strong>Professional editing & proofreading</strong>",
        "Standard turnaround: <strong>20 business days</strong>",
        "100% <strong>unique & plagiarism-free</strong>",
        "<strong>Content formatting</strong> for eBook and PDF",
        "Full <strong>copyright ownership & royalty rights</strong>",
      ]}
      bonus={[
        "Free eBook formatting for Kindle (EPUB & PDF)",
        "Author bio included",
      ]}
    />
    <PackageCard
      packageName="Standard Ghostwriting Package"
      price="$1,999"
      subtitle="Designed for professionals looking to write a full-fledged non-fiction book, memoir, or novel."
      beforePrice="$3,998"
      discount="50%"
      points={[
        "Up to <strong>30,000 words</strong> (approx. 120+ pages)",
        "<strong>Unlimited consultation & strategy sessions</strong>",
        "Written by a <strong>top-tier ghostwriter</strong> in your genre",
        "<strong>3 rounds of revisions</strong>",
        "<strong>Custom outline & voice-matching writing style</strong>",
        "Professional <strong>editing + proofreading + formatting</strong>",
        "Fast-track delivery in <strong>25–30 business days</strong>",
        "<strong>Keyword integration</strong> for book marketing",
        "100% <strong>original content with plagiarism report</strong>",
        "Full <strong>ownership & resale rights</strong>",
      ]}
      bonus={[
        "Free synopsis & back cover text",
        "Free publishing consultation call",
        "Author bio + dedication page included",
      ]}
    />
  </Packages>
  <Testimonials
    description="Get your desired services from a trustworthy agency all set you help you achieve your dreams."
  />
  <Footer />
</Layout>
