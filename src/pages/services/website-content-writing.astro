---
import Navbar from "../../components/common/Navbar.astro";
import Layout from "../../layouts/Layout.astro";
import Footer from "../../components/common/Footer.astro";
import ArtWork from "../../components/home/ArtWork.astro";
import Testimonials from "../../components/home/Testimonials.astro";
import ServiceHero from "../../components/common/ServiceHero.astro";
const title = "Professional Content that Elevates Your Online Presence";
const description =
  "Take your website to the next level with our expert content writing service. You no longer need to look elsewhere when our skilled writers have got all amazing tips to make your content stand out.";
import GhostwritingImage from "../../assets/common/hero-pics/website-content.png";
import Packages from "../../components/common/Packages.astro";
import PackageCard from "../../components/common/PackageCard.astro";
import CommonIntro from "../../components/common/CommonIntro.astro";
const intro = {
  title: "Boost Your Online Visibility with Custom Content",
  description:
    "Whether it’s bringing your ideas to life or crafting fresh perspectives, our content writing service ensures your message is clear, captivating, and aligned with your goals. Trust us to deliver compelling narratives that connect with your visitors and build lasting impressions.",
  getStartedButton: true,
};
import IntroImage from "../../assets/common/intro-pics/website-content.png";
import Quote from "../../components/common/Quote.astro";
import ServicesRow from "../../components/common/ServicesRow.astro";
import Discuss from "../../assets/services-icons/discussion-with-customers.png";
import Planning from "../../assets/services-icons/our-planning.png";
import Making from "../../assets/services-icons/compelling-videos.png";
import Polishing from "../../assets/services-icons/polishing.png";

// ...existing code...
const services = [
  {
    title: "Comprehensive Consultation to Understand Your Needs",
    description:
      "Discuss your goals and preferences of the target audience with us first. We will then design the content strategy accordingly.",
    icon: Discuss,
  },
  {
    title: "Strategic Content Crafting",
    description:
      "Get ready for the best blend of creativity and thoroughly researched content designed specifically for your brand. Each of the web pages is structured with a purpose to enhance engagement and facilitate conversions.",
    icon: Planning,
  },
  {
    title: "Written and Visual Media Production",
    description:
      "It is the duty of our creative writers to bring meaningful content while our visual experts enhance it with catchy visuals. We put the efforts together to provide an immersive experience for your audience in the competitive market.",
    icon: Making,
  },
  {
    title: "Meticulous Review and Optimization",
    description:
      "Trust us to give honest feedback and help you in improving the content quality. Your brand identity is our responsibility so join us for an exciting journey ahead.",
    icon: Polishing,
  },
];
// ...existing code...
---

<Layout title="Website Content Writing Service | Nixxon Publishers">
  <Navbar />
  <ServiceHero
    pageName="Website Content Writing Service"
    title={title}
    description={description}
    image={GhostwritingImage}
    imageAlt="Website Content Writing Service Image"
  />
  <CommonIntro
    title={intro.title}
    description={intro.description}
    image={IntroImage}
    getStartedButton={intro.getStartedButton}
  />
  <ServicesRow services={services} />
  <ArtWork
    title="Explore Our Portfolio"
    subtitle=""
    description="Our experience in providing services to diverse industries helps in choosing what fits your needs. We believe in keeping you informed so that nothing goes against your will."
  />
  <Packages
    title="Affordable Packages for High-Quality Content "
    description="Take the stress out of content creation with our affordable yet premium services. Our packages are helpful for businesses of all sizes. You will get professional quality services suitable to your budget."
  >
    <PackageCard
      packageName="Basic SEO Content Package"
      price="$149"
      beforePrice="$298"
      discount="50%"
      subtitle="Ideal for one-page sites, landing pages, or solo entrepreneurs needing a professional brand presence."
      points={[
        "Up to <strong>3 web pages</strong> (Home, About Us, Services or Contact)",
        "<strong>300–400 words per page</strong>",
        "<strong>Primary keyword integration</strong>",
        "<strong>Brand voice consistency</strong>",
        "SEO-friendly headings (<strong>H1, H2</strong>)",
        "<strong>Compelling CTAs</strong> for conversions",
        "<strong>Plagiarism-free</strong>, Copyscape-passed",
        "Delivered in <strong>Google Docs or Word</strong>",
        "<strong>1 revision per page</strong>",
        "Turnaround: <strong>4–6 business days</strong>",
      ]}
    />
    <PackageCard
      packageName="Start-Up SEO Booster Package"
      price="$399"
      beforePrice="$798"
      discount="50%"
      subtitle="Perfect for small businesses, authors, and consultants building a full-fledged website optimized for search engines."
      points={[
        "Up to <strong>7 pages</strong> (Home, About, Services, FAQ, Contact, Blog, Testimonials, etc.)",
        "<strong>400–600 words per page</strong>",
        "<strong>Keyword research</strong> for each page (primary + LSI keywords)",
        "<strong>Meta title + meta description</strong> for each page",
        "<strong>Tone optimized for target audience</strong> (conversational/professional/etc.)",
        "<strong>Internal linking strategy</strong>",
        "<strong>Alt text recommendations</strong> for images",
        "<strong>SEO-friendly formatting & CTA placements</strong>",
        "<strong>2 rounds of revisions</strong>",
        "Turnaround: <strong>7–10 business days</strong>",
      ]}
      bonus={[
        "Sitemap content suggestions",
        "FREE Google indexing checklist (PDF)",
      ]}
    />
    <PackageCard
      packageName="Standard Conversion-Driven SEO Package"
      price="$899"
      beforePrice="$1798"
      discount="50%"
      subtitle="Designed for growing brands, publishers, agencies, or coaches needing high-converting, fully optimized content for up to 10+ pages."
      points={[
        "Up to <strong>12 pages</strong> – Home, Services, Blog, About, Product/Service pages, FAQ, Contact, Privacy Policy, Terms, etc.",
        "<strong>600–800+ words per page</strong>",
        "<strong>In-depth keyword research</strong> + competitor SERP scan",
        "<strong>Custom meta title + meta description</strong>",
        "Optimized for <strong>Featured Snippets & Google rankings</strong>",
        "<strong>Schema markup suggestions</strong> (FAQ, Services)",
        "<strong>Branded tone of voice</strong> matching the business model",
        "<strong>CTA placement optimized</strong> for conversions",
        "<strong>CMS-ready content delivery</strong> (WordPress, Wix, etc.)",
        "Turnaround: <strong>10–14 business days</strong>",
      ]}
      bonus={[
        "FREE SEO copy audit on existing pages",
        "FREE internal linking map",
        "Dedicated SEO copywriter + QA editor",
      ]}
    />
  </Packages>
  <Quote
    title="Simple and Effective Process"
    description="Our streamlined workflow ensures hassle-free content creation. Ensure your website content is optimized for both user experience and search engine ranking."
  />
  <Testimonials
    description="Looking for engaging website content without lifting a finger? In order to help your brand succeed online, our team listens to your ideas, creates content strategy, and produces exceptional results."
  />
  <Footer />
</Layout>
