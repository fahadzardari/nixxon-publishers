---
import Navbar from "../../components/common/Navbar.astro";
import Layout from "../../layouts/Layout.astro";
import Footer from "../../components/common/Footer.astro";
import ArtWork from "../../components/home/ArtWork.astro";
import Testimonials from "../../components/home/Testimonials.astro";
import ServiceHero from "../../components/common/ServiceHero.astro";
const title = "Professional Blog Writing - Your Ideas, Our Expertise!";
const description =
  "Unlock the potential of great content with our expert blog writing services. We have got a wide variety of skillful writers that have expertise on different niches. You just need to share your vision and we will make sure to make your brand visible to the desired audience.";
import GhostwritingImage from "../../assets/common/hero-pics/blog-writing.png";
import Packages from "../../components/common/Packages.astro";
import PackageCard from "../../components/common/PackageCard.astro";
import CommonIntro from "../../components/common/CommonIntro.astro";
const intro = {
  title: "Harness the Potential of Blogging for Your Brand",
  description:
    "Express your ideas like never before with our blog writing expertise. Give us your ideas and let us shape them into impactful content that truly resonates with your audience. We have well-planned strategies to make your brand unique and valuable to the readers. ",
  getStartedButton: true,
};
import IntroImage from "../../assets/common/intro-pics/blog-writing.png";
import ServicesRow from "../../components/common/ServicesRow.astro";
import Categories from "../../components/common/Categories.astro";

import Discuss from "../../assets/services-icons/discussion-with-customers.png";
import Planning from "../../assets/services-icons/our-planning.png";
import Making from "../../assets/services-icons/compelling-videos.png";

const services = [
  {
    title: "Collaborative Content Planning",
    description:
      "In order to completely understand your objectives and vision, we start by holding lengthy discussions. This guarantees that each blog post we write reflects the core of your brand and is in line with your objectives.",
    icon: Discuss,
  },
  {
    title: "Thoughtful Execution",
    description:
      "Each post is carefully crafted to appeal to your niche and encourage deep interaction. Your ideas are not only considered but also enhanced with feedback to execute them with professionalism and proper market research.",
    icon: Planning,
  },
  {
    title: "Polished Delivery",
    description:
      "Compelling content begins with imagination and ends with flawless execution. Our goal is to write blogs that not only capture readers' interest but also keep them interested and wanting to come back for more.",
    icon: Making,
  },
];
---

<Layout title="Blog Writing Service | Nixxon Publishers">
  <Navbar />
  <ServiceHero
    pageName="Blog Writing Service"
    title={title}
    description={description}
    image={GhostwritingImage}
    imageAlt="Blog Writing Service Image"
  />
  <CommonIntro
    title={intro.title}
    description={intro.description}
    image={IntroImage}
    getStartedButton={intro.getStartedButton}
  />
  <ServicesRow services={services} />
  <ArtWork
    title="Our Impressive Portfolio"
    subtitle=""
    description="Take a look at our top blogs, they show our focus on quality and creativity. You will get a clear idea on the kind of impact we try to bring as per the aim."
  />
  <Categories />
  <Packages
    title="Collaborate with Your Audience Through Captivating Blog Posts"
    description="Give the knowledgeable and experienced blog writers at Nixxon Publishers an opportunity to enhance your online image. All companies, big or small, can benefit from our excellent and reasonably priced blog writing services. Here is a list of our packages."
  >
    <PackageCard
      packageName="Basic Blogging Package"
      price="$199"
      beforePrice="$398"
      discount="50%"
      subtitle="Perfect for startups, authors, and small businesses aiming to build initial content presence."
      points={[
        "<strong>1 blog post</strong> up to 800 words",
        "<strong>Topic research & blog outline</strong>",
        "<strong>SEO keyword inclusion</strong> (1 primary, 2 secondary)",
        "<strong>Unique, plagiarism-free content</strong>",
        "<strong>Meta title + meta description</strong>",
        "<strong>Royalty-free image included</strong>",
        "Delivered in <strong>Google Docs, Word, or CMS-ready</strong>",
        "<strong>1 revision included</strong>",
        "<strong>100% ownership & copyright</strong>",
        "Turnaround: <strong>3–4 business days</strong>",
      ]}
    />
    <PackageCard
      packageName="Start-Up Growth Blogging Package"
      price="$449/month"
      beforePrice="$898/month"
      discount="50%"
      subtitle="Ideal for growing businesses or authors who want regular, strategic blog content with SEO structure."
      points={[
        "<strong>4 blog posts per month</strong> (800–1,000 words each)",
        "<strong>Advanced topic planning & keyword research</strong>",
        "<strong>SEO-optimized formatting</strong> (H1–H3 tags, anchor links)",
        "<strong>Internal linking suggestions</strong>",
        "<strong>Meta tags + alt text</strong> for 1 image/post",
        "<strong>Content calendar planning</strong>",
        "<strong>Grammarly & Copyscape passed</strong>",
        "Uploaded directly to <strong>CMS (WordPress/Wix)</strong> – if needed",
        "<strong>2 revisions per article</strong>",
        "Turnaround: <strong>Weekly delivery</strong>",
      ]}
      bonus={[
        "Free blog ideas list (20+ topics/month)",
        "CTA placement recommendations",
      ]}
    />
    <PackageCard
      packageName="Standard Authority Blogging Package"
      price="$799/month"
      beforePrice="$1598/month"
      discount="50%"
      subtitle="Built for brands aiming to dominate search engines with long-form content, industry authority, and traffic."
      points={[
        "<strong>8 long-form blog posts/month</strong> (1,200–1,500 words each)",
        "In-depth <strong>competitor & SERP analysis</strong>",
        "<strong>Keyword strategy</strong> with primary + LSI keywords",
        "<strong>SEO-optimized headlines</strong> (based on CTR trends)",
        "<strong>Custom graphics or branded images</strong> (if provided)",
        "<strong>Schema markup suggestions</strong> (FAQ, How-To, etc.)",
        "<strong>Strategic internal/external linking</strong>",
        "<strong>Monthly performance analytics</strong> (optional)",
        "Uploaded + formatted <strong>on site or CMS</strong>",
        "Turnaround: <strong>2 posts/week</strong>",
      ]}
      bonus={[
        "Free content upgrade ideas (lead magnets, checklists)",
        "Google Discover & Featured Snippet optimization",
        "Dedicated SEO content strategist",
      ]}
    />
  </Packages>
  <Testimonials />
  <Footer />
</Layout>
