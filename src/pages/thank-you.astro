---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/common/Navbar.astro";
import Image from "astro/components/Image.astro";
import ThankYouCharacter from "../assets/thank-you.png";
import Footer from "../components/common/Footer.astro";
---

<Layout title="Thank You | Nixxon Publishers">
  <main class="bg-primary-blue h-full w-full">
    <Navbar />
    <section
      class="app-max-width flex min-h-screen flex-col items-center justify-center pt-[90px] pb-6 text-white xl:pt-[150px] xl:pb-8"
      aria-labelledby="service-title"
    >
      <div class="text-center">
        <h1
          id="hero-title"
          class="mb-10 text-6xl text-[54px] md:text-[66px] leading-tight font-semibold sm:px-6 md:px-8"
        >
          Thank You!
        </h1>
        <Image
          src={ThankYouCharacter}
          alt={"Thank You Character"}
          class="mx-auto mb-10"
        />
        <p class="max-w-[715px] text-sm md:text-base">
          Thank you for filling in your information. You have been successfully
          connected with us. We look forward to doing business with you. One of
          our account managers will get back to you shortly.
        </p>
        <br />
        <p class="text-sm md:text-base">
          Feel free to get in touch with us at any time.
        </p>

        <div class="mt-8">
          <button
            class="bg-primary-red rounded-md px-6 py-2 text-xs font-semibold text-white capitalize xl:text-base"
          >
            Start Live Chat
          </button>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>
