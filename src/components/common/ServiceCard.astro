---
import Icon from "../../assets/home/publisher-services/book-writing.svg";
import Image from "astro/components/Image.astro";
const {
  title = "Book Writing",
  description = " Beginning from the instant that you have an idea for a written work, Nixxon Publishers Writing is here to help you bring it to life with our range of specialized services. Whether you need book writing, editing, or marketing, we have you covered.",
  iconImage = Icon,
  id,
} = Astro.props;
---

<article
  class="service-card canvas:h-[372px] 3xl:h-[400px] border-primary-red canvas:p-6 relative flex h-[285px] max-w-[270px] cursor-pointer flex-col items-center gap-y-3 rounded-lg border p-4 transition-all duration-300 hover:shadow-xl 2xl:h-[350px] 2xl:max-w-[320px]"
>
  <div
    class="icon-container flex h-[52px] w-[52px] items-center justify-center rounded-md shadow-xl transition-all duration-300"
  >
    <Image
      src={iconImage}
      alt={title}
      width={24}
      height={24}
      class="svg-icon"
    />
  </div>
  <h3
    class="canvas:text-base text-heading-black text-center text-sm font-semibold xl:text-base 2xl:text-2xl"
  >
    {title}
  </h3>
  <p
    class="canvas:text-sm 3xl:text-base overflow-y-auto text-center text-[11px] xl:text-xs"
  >
    {description}
  </p>
</article>

<style>
  .service-card {
    overflow: hidden;
  }

  .service-card::before,
  .service-card::after {
    content: "";
    position: absolute;
    z-index: 1;
    transition: all 0.5s cubic-bezier(0.165, 0.84, 0.44, 1);
    background: transparent;
  }

  /* Top right corner */
  .service-card::before {
    top: 0;
    right: 0;
    width: 0;
    height: 0;
    border-top: 3px solid transparent;
    border-right: 3px solid transparent;
    border-top-right-radius: 0.5rem;
  }

  /* Bottom left corner */
  .service-card::after {
    bottom: 0;
    left: 0;
    width: 0;
    height: 0;
    border-bottom: 3px solid transparent;
    border-left: 3px solid transparent;
    border-bottom-left-radius: 0.5rem;
  }

  .service-card:hover {
    border-color: transparent;
  }

  .service-card:hover::before {
    width: 45%;
    height: 35%;
    border-top-color: #ff002d;
    border-right-color: #ff002d;
  }

  .service-card:hover::after {
    width: 45%;
    height: 35%;
    border-bottom-color: #ff002d;
    border-left-color: #ff002d;
  }

  /* SVG icon color change on hover */
  .svg-icon {
    filter: brightness(0); /* Make it black by default */
    transition: all 0.3s ease;
  }

  .service-card:hover .svg-icon {
    filter: brightness(0) invert(1); /* Make it white on hover */
  }
  /* Optional: Change the background color of the icon container on hover */
  .service-card:hover .icon-container {
    background-color: #ff002d;
  }
</style>

<script>
  // Add this at the end of your file or in a separate script
  document.addEventListener("DOMContentLoaded", () => {
    const cards = document.querySelectorAll(".service-card");

    cards.forEach((card) => {
      card.addEventListener("mouseenter", () => {
        // Additional animation effects could be added here if needed
      });

      card.addEventListener("mouseleave", () => {
        // Reset or additional animations on mouse leave
      });
    });
  });
</script>
