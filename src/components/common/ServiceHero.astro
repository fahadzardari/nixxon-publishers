---
import Image from "astro/components/Image.astro";
const { pageName = "", title, description, image, imageAlt } = Astro.props;
---

<section
  class="service-hero-section app-max-width bg-primary-blue flex items-center justify-between gap-x-4 pt-[70px] pb-6 text-white xl:gap-x-6 xl:pt-[120px] xl:pb-8 2xl:gap-x-8"
  aria-labelledby="service-title"
>
  <article
    class="service-hero-content flex w-[55%] flex-col gap-y-3 py-12 xl:gap-y-4"
  >
    <div>
      <h4
        class="service-hero-pagename mb-2 ml-1 text-xl font-semibold xl:text-2xl"
      >
        {pageName}
      </h4>
      <h1
        id="service-title"
        class="canvas:text-[46px] 3xl:text-5xl 4xl:text-6xl text-3xl leading-tight font-semibold xl:text-4xl"
      >
        {title}
      </h1>
    </div>
    <p
      class="service-hero-description canvas:text-base w-[95%] text-sm xl:leading-[150%] 2xl:text-lg"
    >
      {description}
    </p>
    <div class="service-hero-buttons flex gap-x-4">
      <a
        href="/quote"
        class="service-hero-button rounded-lg bg-[#E7062E] px-6 py-2 text-sm font-semibold text-white xl:text-base 2xl:px-8 2xl:py-3 2xl:text-lg"
        role="button"
        aria-label="Get a quote for our services"
      >
        Get a Quote
      </a>
      <a
        href="/contact"
        class="service-hero-button rounded-lg border border-white px-6 py-2 text-sm font-semibold text-white xl:text-base 2xl:px-8 2xl:py-3 2xl:text-lg"
        role="button"
        aria-label="Chat with our customer service team"
      >
        Chat With Us
      </a>
    </div>
  </article>
  <figure class="service-hero-image w-[40%]">
    <Image
      src={image}
      alt={imageAlt || `${title} service illustration`}
      loading="eager"
      class={"w-full h-full object-cover object-center"}
    />
  </figure>
</section>

<script>
  import gsap from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";
  import SplitType from "split-type";

  // Register ScrollTrigger plugin
  gsap.registerPlugin(ScrollTrigger);

  // Wait for DOM to be fully loaded
  document.addEventListener("DOMContentLoaded", () => {
    // Split title text for character animation
    const title = new SplitType("#service-title", { types: "chars, words" });

    // Create timeline for sequenced animations
    const tl = gsap.timeline({
      scrollTrigger: {
        trigger: ".service-hero-section",
        start: "top 80%",
        toggleActions: "play none none none",
      },
    });

    // Title animation - characters appear with stagger
    tl.from(title.chars, {
      opacity: 0,
      y: 50,
      rotateX: -90,
      stagger: 0.02,
      duration: 0.8,
      ease: "back.out(1.7)",
    });

    // Description paragraph animation
    tl.from(
      ".service-hero-description",
      {
        opacity: 0,
        y: 30,
        duration: 0.8,
        ease: "power3.out",
      },
      "-=0.4",
    );

    // Buttons animation
    tl.from(
      ".service-hero-button",
      {
        opacity: 0,
        y: 20,
        scale: 0.9,
        stagger: 0.15,
        duration: 0.6,
        ease: "power1.out",
      },
      "-=0.6",
    );

    // Image animation
    tl.from(
      ".service-hero-image",
      {
        opacity: 0,
        x: 40,
        duration: 1,
        ease: "power2.out",
      },
      "-=0.8",
    );

    // Optional: Add a subtle floating animation to the image for continued visual interest
    gsap.to(".service-hero-image", {
      y: "10px",
      duration: 2,
      repeat: -1,
      yoyo: true,
      ease: "sine.inOut",
    });
  });
</script>
