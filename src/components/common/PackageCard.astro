---
const {
  topHeading = "50 Pages",
  points = ["50 Pages", "50 Pages", "50 Pages"],
} = Astro.props;
import ChatIcon from "../../assets/common/chat.svg";
import Image from "astro/components/Image.astro";
---

<article class="bg-[#F2F2F2] relative rounded-lg overflow-hidden max-w-[400px] min-h-[550px]">
  <h3
    class="text-white bg-primary-red pt-2 pb-12 w-full text-3xl font-semibold px-4 rounded-lg"
  >
    {topHeading}
  </h3>

  <div
    class="bg-white w-[95%] rounded-lg mb-4 -mt-10 float-right relative after:content-[''] after:absolute after:top-[20%] after:right-4 after:bg-[black] after:w-[2px] after:h-[44%]"
  >
    <div class="flex flex-col gap-y-4 p-6">
      <h4 class="text-lg font-semibold">THE ABOVE PACKAGE INCLUDES:</h4>
      <ul class="list-none pl-0 w-[90%]">
        {
          points.map((point) => (
            <li class="text-sm text-black flex items-center  my-4">
              <span class="text-sm mr-2">â€¢</span> {point}
            </li>
          ))
        }
      </ul>

      <div class="flex justify-between gap-x-4">
        <button
          id="quote-button"
          class="bg-primary-red px-3 py-1 xl:px-6 xl:py-2 text-sm xl:text-base rounded-md text-white"
        >
          Get a Quote
        </button>
        <button class="flex items-center">
          <Image src={ChatIcon} alt="Chat Icon" class="h-full mr-2" />
          <div class="flex flex-col items-start justify-between">
            <span class="text-xs xl:text-sm"> Click Here to </span>
            <span class="text-sm xl:text-xl font-semibold"> Live Chat </span>
          </div>
        </button>
      </div>
    </div>
  </div>
</article>
