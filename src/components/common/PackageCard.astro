---
const {
  topHeading = "50 Pages",
  points = ["50 Pages", "50 Pages", "50 Pages"],
} = Astro.props;
import ChatIcon from "../../assets/common/chat.svg";
import Image from "astro/components/Image.astro";
---

<article class="relative overflow-hidden rounded-lg bg-[#F2F2F2]">
  <h3
    class="bg-primary-red w-full rounded-lg px-3 pt-2 pb-12 text-2xl font-semibold text-white xl:px-4 xl:text-3xl"
  >
    {topHeading}
  </h3>

  <div
    class="relative float-right -mt-10 mb-4 w-[95%] rounded-lg bg-white after:absolute after:top-[20%] after:right-4 after:h-[44%] after:w-[2px] after:bg-[black] after:content-['']"
  >
    <div class="flex flex-col gap-y-4 p-6">
      <h4 class="canvas:text-base text-xs font-semibold xl:text-sm 2xl:text-xl">
        THE ABOVE PACKAGE INCLUDES:
      </h4>
      <ul class="w-[90%] list-none pl-0">
        {
          points.map((point) => (
            <li class="xs:text-xs canvas:text-sm my-2 flex items-center text-[11px] text-black xl:my-4 2xl:text-base">
              <span class="mr-2 text-sm">â€¢</span> {point}
            </li>
          ))
        }
      </ul>

      <div class="flex justify-between gap-x-4">
        <a

          id="quote-button"
          class="open-contact-modal bg-primary-red rounded-md px-2 py-1 text-xs text-white xl:px-6 xl:py-2 xl:text-sm 2xl:text-lg"
        >
          Get a Quote
        </a>
        <button class="flex items-center">
          <Image src={ChatIcon} alt="Chat Icon" class="mr-1 h-full xl:mr-2" />
          <div class="flex flex-col items-start justify-between">
            <span class="canvas:text-sm text-[10px] xl:text-xs 2xl:text-base">
              Click Here to
            </span>
            <span class="canvas:text-xl text-xs font-semibold xl:text-sm">
              Live Chat
            </span>
          </div>
        </button>
      </div>
    </div>
  </div>
</article>
