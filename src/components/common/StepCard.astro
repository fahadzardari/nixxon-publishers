---
const {
  step = "01",
  title = "Evaluation of Research and Strategy",
  description = "For your assessment and approval, we identify the most crucial marketing strategy.",
  className = "step-card",
} = Astro.props;
---

<article
  class={`flex flex-col py-4 h-[230px] xl:h-[280px] canvas:h-[280px] 2xl:h-[280px] bg-white rounded-lg px-4 max-w-[300px] canvas:max-w-[350px] ${className}`}
  role="article"
  aria-label="Step Card"
  aria-labelledby="step-card-title"
  aria-describedby="step-card-description"
>
  <h1
    class="text-right text-4xl font-extrabold text-[#4E010F] xl:text-5xl xl:text-[56px]"
  >
    {step}
  </h1>
  <div class="flex w-[90%] flex-col gap-y-4 xl:w-[80%]">
    <h2 class="canvas:text-xl text-base font-semibold xl:text-lg">{title}</h2>
    <p class="text-xs xl:text-sm">{description}</p>
  </div>
</article>
