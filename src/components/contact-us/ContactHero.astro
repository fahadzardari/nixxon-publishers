<section
  class="contact-hero app-max-width bg-primary-blue flex items-center justify-center gap-x-4 pt-[70px] pb-6 text-white xl:gap-x-6 xl:pt-[120px] xl:pb-8 2xl:gap-x-8"
  aria-labelledby="service-title"
>
  <article
    class="contact-hero-content flex flex-col items-center gap-y-4 py-[5dvw] text-center md:gap-y-8 md:py-[8dvw]"
  >
    <div class="">
      <h4
        class="contact-hero-pagename mb-2 ml-1 text-lg font-semibold sm:text-xl md:text-2xl"
      >
        Contact Now
      </h4>
      <h1
        id="service-title"
        class="text-2xl font-semibold sm:text-3xl md:text-4xl xl:text-[46px] 2xl:text-6xl"
      >
        Connect With Us, Let's Work Together!
      </h1>
    </div>
    <p
      class="contact-hero-description w-[80%] max-w-[825px] text-xs leading-[150%] md:text-sm xl:text-base 2xl:text-lg"
    >
      We offer customized publishing services that value your vision.Nixxon
      Publisher delivers captivating book writing, beautiful cover design, smart
      marketing, and smooth publishing. Make your story shine in literature with
      our collaborative and fast workflow. Create literary legacies with Nixxon
      Publisher.
    </p>
    <div class="contact-hero-buttons mt-6 flex gap-x-4">
      <a
        class="open-contact-modal contact-hero-button rounded-lg bg-[#E7062E] px-4 py-2 text-sm font-semibold text-white md:px-6 md:text-base"
        role="button"
        aria-label="Get a quote for our services"
      >
        Get a Quote
      </a>
      <a
        href="/contact-us"
        class="open-chat-widget contact-hero-button rounded-lg border border-white px-4 py-2 text-sm font-semibold text-white md:px-6 md:text-base"
        role="button"
        aria-label="Chat with our customer service team"
      >
        Chat With Us
      </a>
    </div>
  </article>
</section>

<style>
  .contact-hero {
    background-image: url("../../assets/common/contact-us-hero.png");
  }
</style>

<script>
  import gsap from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";
  import SplitType from "split-type";

  // Register ScrollTrigger plugin
  gsap.registerPlugin(ScrollTrigger);

  // Wait for DOM to be fully loaded
  document.addEventListener("DOMContentLoaded", () => {
    // Split title text for character animation
    const title = new SplitType("#service-title", { types: "chars, words" });

    // Create timeline for sequenced animations
    const tl = gsap.timeline({
      scrollTrigger: {
        trigger: ".contact-hero",
        start: "top 80%",
        toggleActions: "play none none none",
      },
    });

    // Title animation - characters appear with stagger
    tl.from(title.chars, {
      opacity: 0,
      y: 50,
      rotateX: -90,
      stagger: 0.02,
      duration: 0.8,
      ease: "back.out(1.7)",
    });

    // Description paragraph animation
    tl.from(
      ".contact-hero-description",
      {
        opacity: 0,
        y: 30,
        duration: 0.8,
        ease: "power3.out",
      },
      "-=0.4",
    );

    // Buttons animation
    tl.from(
      ".contact-hero-button",
      {
        opacity: 0,
        y: 20,
        scale: 0.9,
        stagger: 0.15,
        duration: 0.6,
        ease: "power1.out",
      },
      "-=0.6",
    );

    // Image animation
    tl.from(
      ".contact-hero-image",
      {
        opacity: 0,
        x: 40,
        duration: 1,
        ease: "power2.out",
      },
      "-=0.8",
    );

    // Optional: Add a subtle floating animation to the image for continued visual interest
    gsap.to(".contact-hero-image", {
      y: "10px",
      duration: 2,
      repeat: -1,
      yoyo: true,
      ease: "sine.inOut",
    });
  });
</script>
